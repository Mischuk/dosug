/*!=========================
      Base grid styles
==========================*/
html
  position relative
  min-height 100%
  background #393939
body
  font-size 16px
  line-height 1.2
  color #000
  background #fff

.wrapper
  clearfix()
  position relative
  width $wrapper
  height 100%
  padding-left 15px
  padding-right 15px
  margin-left auto
  margin-right auto