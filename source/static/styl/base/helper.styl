.row
  clearfix()

.vertical-outer
  display table
  width 100%
  height 100%

.vertical-inner
  display table-cell
  vertical-align middle
  width 100%

.centered
  display table-cell
  vertical-align middle
  text-align center
  width 100%

.fluid-image
  display block
  max-width 100%
  height auto

.full
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  &.image
    background-repeat no-repeat
    background-position 50%
    background-size cover

.url-image
  background-repeat no-repeat
  background-position 50%
  background-size cover

.db-link,
.block
  display block
  width 100%
  height 100%

.xs-hidden
  display none
  @media screen and (min-width: 768px)
    display inline-block

.xs-visible
  display inline-block
  @media screen and (min-width: 768px)
    display none

.hide
  display none