h1, h2, h3, h4, h5
  font-style italic
  line-height 1
  padding 10px 0
  margin-bottom 20px
h1
  font-weight 600
h2, h3, h4, h5
  font-weight 700
h1
  font-size 30px
h2
  font-size 20px
.page-title
  font-size 30px
  line-height 1
  text-transform uppercase
  color #000

.section-title
  position relative
  padding-bottom 30px
  font-weight 600
  font-style italic
  font-size 30px
  &.small
    font-size 20px
    padding 15px 0

a
  color $link
  &:hover
    color $base-color

.sum
  bold()
  color $base-color
  & + .currency
    bold()