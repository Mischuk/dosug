// Mobile burger button
.mobile-menu-trigger
  display block
  position absolute
  right 15px
  top 50%
  width 40px
  height 40px
  margin-top -(@height/2)
  border 2px solid #fff
  border-radius 50%
  cursor pointer
  @media screen and (min-width: 850px)
    display none
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 50%
    width 20px
    margin-left -10px
    height 2px
    background #fff
  &:before
    top 10px
  &:after
    bottom 10px
  span
    top 50%
    margin-top -1.5px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform: rotate(135deg) translate(-6px, 6px)
    &:before
      transform: rotate(-135deg) translate(-4px, -4px)
