// Mobile burger button
.mobile-menu-trigger
  anim()
  display block
  position absolute
  z-index 10
  left 0
  top 50%
  width 50%
  height 40px
  margin-top -(@height/2)
  border 2px solid transparent
  cursor pointer
  background #810000
  @media screen and (min-width: 768px)
    display none
  &:after,
  &:before,
  span
    anim()
    content ''
    position absolute
    left 50%
    width 20px
    margin-left -10px
    height 2px
    background #fff
  &:before
    top 10px
  &:after
    bottom 10px
  span
    top 50%
    margin-top -1.5px
  &.open
    span
      opacity 0
      transform translateX(-5px)
    &:after
      transform: rotate(135deg) translate(-6px, 6px)
    &:before
      transform: rotate(-135deg) translate(-4px, -4px)

.btn-lead
  anim()
  bold()
  width 100%
  height 36px
  line-height 36px
  border none !important
  border-radius $radius
  background $base-color
  text-align center
  color #fff !important
  padding 0 !important
  &:hover
    background $base-color - 15%
  &:active
    box-shadow inset 0 0 20px rgba(0,0,0,.25)
  &.dark
    background $button
    height 30px
    line-height 30px
    &:hover
      background $button - 15%
  &.medium
    height 36px
    line-height 36px
  &.signout
    background #000
    width 105px
  &.center
    display block
    margin 0 auto



.mobile-sidebar-trigger
  anim()
  position fixed
  left 0
  top 50%
  width 50px
  height 50px
  margin-top -(@height/2)
  background $base-color
  cursor pointer
  border-radius 0 $radius $radius 0
  z-index 400
  @media LG
    display none
  &:after
    anim()
    content ''
    width 20px
    height 4px
    background #fff
    position absolute
    left 50%
    top 50%
    margin-left -9px
    margin-top -9px
    transform rotate(45deg)
  &:before
    anim()
    content ''
    width 20px
    height 4px
    background #fff
    position absolute
    left 50%
    top 50%
    margin-left -10px
    margin-top 4px
    transform rotate(-45deg)
  &.open
    transform translateX(230px)
    &:before
      transform rotate(-45deg) translate(2px, -5px)
    &:after
      transform rotate(45deg) translate(3px, 8px)
a,
button
  &:disabled
    opacity .4 !important
  &.enable,
  &.change,
  &.edit,
  &.remove,
  &.disable
    bold()
    display block
    width 100%
    height 30px
    border none
    line-height 30px
    border-radius $radius
    @media MD
      padding 0 20px
  &.enable,
  &.change,
  &.edit
    anim()
    display block
    border none
    width 100%
    color #fff
    background $base-color
    opacity .7
    text-align center
    &:hover
      opacity 1
  &.remove,
  &.disable
    anim()
    background #e6e6e6
    color #a4a4a4
    &:hover
      background $base-color
      color #fff
    &:disabled:hover
      background #e6e6e6
      color #a4a4a4
.post-theme
  margin-top -15px
  margin-bottom 15px
  a
    display inline-block
    vertical-align middle
    padding 0 25px !important
    height 30px
    line-height 30px
    width auto