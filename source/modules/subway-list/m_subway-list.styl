$base = #810000

.m_subway-list
  anim()
  z-index 250
  position relative
  background $base
  border-top 1px solid $base - 25%
  transform translateY(-200%)
  position absolute
  left 0
  top 140px
  width 100%
  @media SM
    position fixed
    left 0%
    top 0
    width 100%
    height 100%
    z-index 300
  &.open
    transform translateY(0%)
  &:after,
  &:before
    content ''
    position absolute
    left 0
    width 100%
    height 40px
    z-index 5
    display none
  &:before
    top 49px
    box-shadow inset 0 40px 20px -20px rgb(97, 0, 0)
  &:after
    bottom 0
    box-shadow inset 0 -40px 20px -20px rgb(97, 0, 0)
  .close
    display none
    @media SM
      anim()
      display block
      width 50px
      height 50px
      line-height 50px
      text-align center
      position absolute
      right 0
      top 0
      color #fff
      font-size 24px
      z-index 10
      cursor pointer
      opacity .8
      &:hover
        opacity 1
    @media LG
      right 20%
  .wrapper
    padding 0
    @media SM
      padding-top 65px
    @media LG
      width 100%
      max-width none
  .title
    color #fff
    font-weight bold
    font-size 16px
    padding 0 15px
    height 50px
    line-height 50px
    @media SM
      position absolute
      left 0
      top 0
      width 100%
      height 50px
      background $base
    @media LG
      padding 0 20%
  ul
    max-height 240px
    overflow auto
    padding 15px 0
    @media SM
      max-height 100%
      padding-top 0
    @media LG
      padding-left 20%
      padding-right 20%
    li
      @media SM
        display inline-block
        vertical-align top
        width 32%
      a
        display block
        padding 7px 15px
        font-size 16px
        color #fff
        &:hover
          text-decoration underline
        b
          color #fff000

