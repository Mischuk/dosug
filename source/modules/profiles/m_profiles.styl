.m_profiles
  .header
    padding 15px 0
    border 1px solid $border
    border-left none
    border-right none
    margin-bottom 15px
    .default-form
      margin-top 0
      max-width 100%
      > div
        margin-bottom 15px
        @media screen and (min-width: 568px)
          margin-bottom 0
        &:last-child
          margin-bottom 0
    .find, .sort
      @media screen and (min-width: 568px)
        float left
        width 31%
        margin-right 2%
      @media SM
        width 23%
      @media MD
        width auto
    .show
      @media screen and (min-width: 568px)
        float right
        width 33%
      @media SM
        width 50%
      @media MD
        width auto
    .find
      input
        anim()
        border 1px solid $border-input
        height 30px
        line-height 30px
        width 100%
        padding 0 10px
        @media LG
          padding 0 20px
        &:focus
          border-color $border-input - 25%
    .sort
      @media MD
        > span.label
          display inline-block
          vertical-align middle
          width auto
        > span.select2
          width 130px !important
          margin-left 10px
    .show
      @media SM
        width auto
      > .label
        float none
        width 100%
        @media MD
          width auto
          display inline-block
          vertical-align middle
          margin-right 10px
      .checkbox
        position relative
        height 30px
        line-height 30px
        @media SM
          display inline-block
          vertical-align middle
          margin-right 15px
        .check-label
          padding-top 0
  .profiles-options
    width 100%
    margin-bottom 15px
    @media MD
      display table
      width 100%
    #profiles-selected
      semibold()
      color #000
    .cell
      position relative
      height 30px
      line-height 30px
      margin-bottom 15px
      float left
      width 48%
      margin-right 4%
      @media screen and (min-width: 568px)
        width 24%
        margin-right 1%
      @media MD
        margin-right 0
        display table-cell
        vertical-align middle
        width auto
        float none
        padding-right 10px
      &:first-child,
      &:first-child + .cell
        width 100%
        margin-right 0
        @media screen and (min-width: 568px)
          width 50%
        @media MD
          width auto
      &:last-child
        margin-bottom 0
        margin-right 0
        @media MD
          padding-right 0
      &:nth-child(even)
        margin-right 0
        @media screen and (min-width: 568px)
          margin-right 1%
        @media MD
          margin-right 0
      button
        bold()
        display block
        width 100%
        height 30px
        border none
        line-height 30px
        border-radius $radius
        @media MD
          padding 0 20px
        &.vip
          position relative
          background $base-color
          color #fff
          min-width 160px
          @media MD
            text-align center
            padding-left 45px
          &:after
            content ''
            background: url('../images/sprite.png') no-repeat -100px -100px;
            width: 36px;
            height: 21px;
            position absolute
            left 15px
            top 50%
            margin-top -12px
            @media MD
              left 5px
  .m_girls
    .item
      position relative
      height auto
      @media MD
        height 490px
      .name
        @media MD
          padding-left 50px
      .select-profile
        .checkbox
          position static
          @media MD
            position relative
        .check-icon
          position absolute
          left 15px
          top 25px
          z-index 10
          @media MD
            left -35px
            top 10px
        .check-text
          user-select-none()
          cursor pointer
      .image
        @media MD
          height 380px
      .buttons
        button
          & + button
            margin-top 15px
      .status
        &.online
          color #cc6666
        &.offline
          color #333
      .vip
        cursor default
        margin 10px 0
        .vip-status
          position relative
          border 2px solid $base-color
          border-radius $radius
          padding 10px 0
          text-align center
          .label
            font-size 24px
          .small,
          .label
            bold()
            text-transform uppercase
        &.actived
          .vip-status
            .label
              color $base-color
            .icon
              background: url('../images/sprite.png') no-repeat 0 -150px;
              width: 70px;
              height: 40px;
              margin 5px auto
        &.disabled
          .vip-status
            anim()
            display block
            width 100%
            height 100%
            text-decoration none
            background $base-color
            &:hover
              border-color $base-color - 25%
              background $base-color - 25%
            .label, .small
              color #fff
            .icon
              background: url('../images/sprite.png') no-repeat -100px -150px;
              width: 70px;
              height: 40px;
              margin 5px auto
      .bottom
        float left
        width 100%
        background #fafafa
        padding 5px 15px 15px
        .label
          font-style italic
          color #666666
        .value
          semibold()
          font-style italic
          font-size 20px
        .tax
          margin-bottom 15px
          @media MD
            text-align right
        .position,
        .tax
          @media MD
            float left
            width 50%
