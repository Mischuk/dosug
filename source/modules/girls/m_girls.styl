.m_girls
  clearfix()
  .item
    clearfix()
    anim()
    background #fff
    box-shadow 1px 1px 3px rgba(0,0,0,.15)
    @media MD
      height 390px
    @media SM
      margin-bottom 30px
    &:hover
      box-shadow 1px 1px 5px rgba(0,0,0,.25)
    .image, .info
      float left
      width 100%
      @media MD
        width 50%
    .image
      float right
      height 300px
      @media screen and (min-width: 360px)
        height 400px
      @media MD
        height 100%
      @media LG
        width 55%
      a
        position relative
        pseudo-dark-bg(.25)
    .info
      @media MD
        padding-top 5px
      @media LG
        width 45%
      > div
        padding 5px 15px
      a
        color $link
        text-decoration underline
        &:hover
          color #000
      .name
        semibold()
        font-style italic
        font-size 22px
        line-height 1
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      .parameters
        font-size 12px
        span + span
          &:before
            content " / "
        b
          semibold()
          font-size 14px
      .prices
        table
          th
            font-size 16px
            border-top none
            padding 10px 0
            & + th
              text-align left
          td
            padding 6px 0
            & + td
              text-align left
          tr:last-child td
            border-bottom 1px solid #e9e9e9
      .verified,
      .unverified
        padding 0
        background #f4f4f4
      .unverified
        height 4px
        width 90%
        margin 10px auto
      .verified
        position relative
        height 32px
        margin 5px 0
        &:before
          content ""
          background: url('../images/sprite.png') no-repeat 0 -50px;
          width: 20px;
          height: 15px;
          position absolute
          left 20px
          top 50%
          margin-top -(@height/2)
        &:after
          content 'Фото проверено'
          color #339933
          font-weight 600
          line-height 32px
          padding-left 50px
      .tel, .subway, .comments
        position relative
        padding-left 45px
        &:after
          content ''
          position absolute
          left 20px
          top 50%
          background-image url('../images/sprite.png')
          background-repeat no-repeat
      .tel
        &:after
          background-position -50px -50px
          width 15px
          height 15px
          margin-top -(@height/2)
        a
          color #cc0000
          font-size 18px
          font-weight 600
          text-decoration none
          cursor default
      .subway
        &:after
          background-position -100px -50px
          width 18px
          height 11px
          margin-top -(@height/2)
      .comments
        &:after
          background-position  -150px -50px
          width 15px
          height 15px
          margin-top -(@height/2)
      .details
        text-align right
        padding-bottom 15px