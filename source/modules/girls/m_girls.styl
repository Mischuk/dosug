.m_girls
  clearfix()
  margin-bottom 30px
  .item
    clearfix()
    anim()
    margin-bottom 30px
    background #fff
    box-shadow 0 0 5px 1px rgba(0,0,0,.15)
    @media screen and (min-width: 568px)
      float left
      width 48%
      &:nth-child(even)
        margin-left 4%
    @media screen and (min-width: 992px)
      height 376px
      width 49%
      margin-bottom 2%
      &:nth-child(even)
          margin-left 2%
    &:last-child
      margin-bottom 0
    &:hover
      box-shadow 0 0 5px 2px rgba(0,0,0,.25)
    .image, .info
      float left
      width 100%
      @media screen and (min-width: 992px)
        width 50%
    .image
      float right
      height 300px
      @media screen and (min-width: 992px)
        height 100%
      @media screen and (min-width: 1200px)
        width 55%
      a
        position relative
        pseudo-dark-bg(.25)
    .info
      @media screen and (min-width: 1200px)
        width 45%
      > div
        padding 5px 15px
      a
        color $link
        text-decoration underline
        &:hover
          color #000
      .name
        font-style italic
        font-size 22px
        line-height 1
        font-weight 600
      .parameters
        font-size 12px
        span + span
          &:before
            content " / "
        b
          font-size 14px
          font-weight 600
      .verified,
      .unverified
        padding 0
        background #f4f4f4
      .unverified
        height 4px
        width 90%
        margin 10px auto
      .verified
        position relative
        height 32px
        margin 5px 0
        &:before
          content ""
          background: url('../images/sprite.png') no-repeat 0 -50px;
          width: 20px;
          height: 15px;
          position absolute
          left 20px
          top 50%
          margin-top -(@height/2)
        &:after
          content 'Фото проверено'
          color #339933
          font-weight 600
          line-height 32px
          padding-left 50px
      .tel, .subway, .comments
        position relative
        padding-left 45px
        &:after
          content ''
          position absolute
          left 20px
          top 50%
          background-image url('../images/sprite.png')
          background-repeat no-repeat
      .tel
        &:after
          background-position -50px -50px
          width 15px
          height 15px
          margin-top -(@height/2)
        a
          color #cc0000
          font-size 18px
          font-weight 600
          text-decoration none
          cursor default
      .subway
        &:after
          background-position -100px -50px
          width 18px
          height 11px
          margin-top -(@height/2)
      .prices
        table
          width 100%
          text-align left
          th
            font-style italic
            font-size 16px
            padding 10px 0
          td
            border-top 1px solid #e9e9e9
            padding 3px 0
            & + td
              font-weight 600
              span
                color #cc0000
                font-weight 700
          tr:last-child td
            border-bottom 1px solid #e9e9e9
      .comments
        &:after
          background-position  -150px -50px
          width 15px
          height 15px
          margin-top -(@height/2)
      .details
        text-align right
        padding-bottom 15px