.m_articles
  margin-bottom 30px
  .item
    clearfix()
    position relative
    margin-bottom 15px
    .image
      margin-bottom 10px
      @media screen and (min-width: 568px)
        float left
        width 210px
        height 150px
        margin-right 10px
      a
        position relative
        display block
        width 100%
        height 100%
        pseudo-dark-bg(.2)
        img
          width 100%
          height auto
    .title
      a
        semibold()
        font-size 20px
        font-style italic
        text-decoration underline
        &:hover
          color #333
    .post-date
      position absolute
      left 10px
      top 10px
      padding 2px 5px
      font-style italic
      color #fff
      background $base-color
      @media screen and (min-width: 568px)
        left 20px