$background = #990000

.m_header
  position relative
  z-index 300
  height 140px
  @media SM
    height 210px
  @media MD
    height 175px
  .top,
  .bottom
    .wrapper
      padding-left 0
      padding-right 0
  .top
    position relative
    z-index 10
    width 100%
    height 30px
    margin-bottom 70px
    background $base-color-second
    @media SM
      height 90px
      margin-bottom 0
      background $background url("../images/header-pattern.png") repeat 0 0
  .bottom
    height 40px
    background $base-color-second
    @media SM
      position absolute
      z-index 10
      left 0
      top 40px
      width 100%
      padding-left 260px
      padding-right 15px
      line-height 40px
      background none
    @media MD
      padding-left 0
  .logo
    position absolute
    z-index 10
    left 0
    top 30px
    width 100%
    height 70px
    padding 10px 0
    background $background url("../images/header-pattern.png") repeat 0 0
    @media SM
      left 15px
      top 0
      width 232px
      height 60px
      border-radius 0 0 $radius $radius
      background $base-color-second
    @media MD
      width 332px
      height 73px
      padding 0
    a
      display block
      width 100%
      height 100%
      background url("../images/header-logo.png") no-repeat 50%
      background-size contain
      @media MD
        background-size initial
  .signin, .subway, .lang
    float left
    width 33.333%
    height 100%
    @media SM
      position absolute
      float none
      top 0
      width auto
      height 30px
    a
      anim()
      display block
      width 100%
      height 100%
      padding-left 10px
      line-height 30px
      color #fff
      @media SM
        border-radius 0 0 $radius $radius
        padding 0 15px
      &:hover,
      &.open
        background $base-color-second - 25%
      > span
        display inline-block
        vertical-align top
        line-height 30px
      .label
        padding-left 5px
  .subway
    @media SM
      right 277px
      background $base-color-second
      border-radius 0 0 $radius $radius
      .icon-subway
        display none
      a
        padding-right 40px
        &:after
          content ''
          position absolute
          right 14px
          top 10px
          width 10px
          height 9px
          background: url('../images/sprite.png') no-repeat 0 0;
    @media MD
      right 400px
  .signin
    border-left 1px solid $base-color-second - 25%
    border-right 1px solid $base-color-second - 25%
    @media SM
      right 108px
      border none
      border-radius 0 0 $radius $radius
      background $base-color-second
    @media MD
      right 200px
    a
      position relative
      .s-icon-signin
        display inline-block
        vertical-align middle
        width 13px
        height 15px
        margin-top -3px
        background url('../images/sprite.png') no-repeat -50px 0
  .lang
    @media SM
      position absolute
      right 15px
      top 0
      width 78px
      border-radius 0 0 $radius $radius
      background $base-color-second
    a
      position relative
      &:after
        content ''
        position absolute
        right 10px
        top 50%
        width 9px
        height 10px
        margin-top -(@height/2)
        background url('../images/sprite.png') no-repeat -100px 0
    .current
      display none
  .menu
    @media MD
      padding-left 390px
    ul
      anim()
      display block
      position absolute
      left 0
      top 40px
      width 100%
      border-top 1px solid $base-color-second - 25%
      transform translateY(-200%)
      background $base-color-second
      @media SM
        position static
        display table
        border-top none
        transform translateY(0%)
        background none
      &.open
        transform translateY(0%)

      li
        border-bottom 1px solid $base-color-second - 25%
        text-align center
        @media SM
          display table-cell
          vertical-align middle
          border-bottom none
        a
          bold()
          anim()
          display block
          padding 15px 0
          color #fff
          @media SM
            padding 0
            font-size 12px
          @media MD
            font-size 15px
          &:hover
            background $base-color-second - 25%
            @media SM
              background none
              color #fff000
    .mobile-menu-trigger
      &.open,
      &:hover
        background $base-color-second - 25%
  .filters
    .mobile-filters-trigger
      anim()
      position absolute
      z-index 10
      right 0
      bottom 0
      width 50%
      border-left 1px solid $base-color-second - 25%
      font-size 20px
      line-height 40px
      text-align center
      background $base-color-second
      color #fff
      cursor pointer
      &:hover,
      &.open
        background $base-color-second - 25%
      @media SM
        display none

