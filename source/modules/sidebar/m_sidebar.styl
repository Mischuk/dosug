.m_sidebar
  anim()
  height 100%
  background: url("../images/background.png") repeat 0 0;
  position absolute
  left 0
  top 0
  z-index 400
  width 230px
  overflow auto
  box-shadow 0 0 15px 5px rgba(0,0,0,.5)
  transform translateX(-110%)
  @media LG
    background none
    position static
    transform translateX(0%)
    box-shadow none
  &.open
    transform translateX(0%)
  .categories
    padding 0 15px
    @media LG
      padding 0
    ul
      margin-bottom 20px
      &:last-child
        margin-bottom 0
    li
      position relative
      padding-left 25px
      &:after
        anim()
        content ''
        width 3px
        height 11px
        background #cc0000
        position absolute
        left 10px
        top 7px
      &:hover
        &:after
          transform translateX(-10px) rotate(130deg)
          opacity 0
    a
      anim()
      display inline-block
      vertical-align middle
      color #666666
      padding 4px 0
      &:hover
        color $base-color