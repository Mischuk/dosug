.m_comments
  padding-top 10px
  padding-left 0
  padding-right 0
  h1
    semibold()
    font-style italic
    font-size 24px
    margin-bottom 5px
  .section-title
    padding-left 10px
    padding-right 10px
    @media screen and (min-width: 568px)
      padding-left 20px
      padding-right 20px
  .signin
    padding-bottom 15px
    padding-left 15px
    padding-right 15px
    background #fcfcfc
    margin-bottom 15px
    @media screen and (min-width: 568px)
      padding-left 20px
      padding-right 20px
    a
      text-decoration underline
    form
      margin-top 15px
      max-width none
      .column
        position relative
        margin-bottom 15px
        @media screen and (min-width: 568px)
          float left
          width 40%
        &:last-child
          margin-bottom 0
          @media screen and (min-width: 568px)
            width 20%
        .label
          @media screen and (min-width: 568px)
            width 60px
            position absolute
            left 0
            top 0
        .input
          @media screen and (min-width: 568px)
            width 100%
            padding-left 60px
            padding-right 15px
      .submit
        height 30px
        line-height 30px
        background #990000

  .comments-box
    padding 0 15px
    @media screen and (min-width: 568px)
      padding-left 20px
      padding-right 20px
    .comment
      position relative
      border-bottom 1px solid #ededed
      margin-bottom 15px
      padding-bottom 15px
      &:last-child
        border-bottom none
        padding-bottom 0
      .user-image
        float left
        margin-right 7px
        width 75px
        height 75px
        a
          display block
          width 100%
          height 100%
          border-radius $radius
          overflow hidden
          img
            width 100%
            height 100%
      .user-message
        padding-left 90px
        .message
          p
            margin 0
        .bottom
          clearfix()
          padding-top 15px
          .user-name
            position relative
            float left
            padding-left 20px
            line-height 30px
            &:after
              content ''
              background: url('../images/sprite.png') no-repeat -50px -200px;
              width: 11px;
              height: 14px;
              position absolute
              left 0
              top 50%
              margin-top -(@height/2)
            a
              text-decoration underline
          .post-date
            float right
            color #fff
            font-style italic
            background #990000
            padding 0 5px
            line-height 30px
  .m_paginations
    border-top 1px solid #ededed
    padding-top 30px