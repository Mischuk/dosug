.m_forum
  table
    margin-bottom 30px
    td
      padding 7px 15px
    a
      text-decoration underline
    @media screen and (max-width: 567px)
      tr
        th + th
          display none
        td + td
          display none
  .m_comments
    position relative
    padding-left 15px
    padding-right 15px
    > .section-title
      margin-bottom 15px
    .comments-box
      padding-left 0
      padding-right 0


  .forum-post-lead .comments-box .comment
    .user-image
      width 120px
      height 120px
      padding-right 5px
    .user-message
      padding-left 0
  .forum-add-post
    position relative
    .add-post
      @media screen and (min-width: 568px)
        position relative
        padding-left 90px
      .row
        @media screen and (min-width: 568px)
          text-align right
      .input
        @media screen and (min-width: 568px)
          float none
          width auto
          button
            display inline-block
            vertical-align middle
            width auto
            padding-left 25px !important
            padding-right 25px !important
      textarea
        background #f6f6f6
        border 1px solid #f6f6f6
        resize none
        &:focus
          border 1px solid #f6f6f6 - 25%
    .user-image
      display none
      @media screen and (min-width: 568px)
        display block
        position absolute
        left 0
        top 0
        width 75px
        height 75px
        img
          width 100%
          height 100%